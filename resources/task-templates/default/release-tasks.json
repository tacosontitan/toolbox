{
  "$schema": "../schemas/task-template.schema.json",
  "version": "1.0.0",
  "metadata": {
    "name": "Release Tasks",
    "description": "Pre-defined tasks for release management and deployment workflows",
    "author": "tacosontitan",
    "category": "release",
    "tags": ["release", "deployment", "production"]
  },
  "templates": [
    {
      "id": "release.create-production-build",
      "title": "Create Production Build",
      "description": "Create a production-ready build for release deployment.",
      "remainingWork": 1,
      "activity": "Deployment",
      "assigneeRequired": true,
      "appliesTo": ["Feature", "User Story"],
      "metadata": {
        "category": "release",
        "tags": ["build", "production", "deployment"],
        "priority": 1,
        "configurable": true
      }
    },
    {
      "id": "release.deploy-to-staging",
      "title": "Deploy to Staging Environment",
      "description": "Deploy the production build to the staging environment for final validation.",
      "remainingWork": 2,
      "activity": "Deployment",
      "assigneeRequired": false,
      "appliesTo": ["Feature", "User Story"],
      "metadata": {
        "category": "release",
        "tags": ["deployment", "staging", "validation"],
        "priority": 2,
        "configurable": true
      }
    },
    {
      "id": "release.final-qa-validation",
      "title": "Final QA Validation",
      "description": "Perform final QA validation in the staging environment before production release.",
      "remainingWork": 1,
      "activity": "Testing",
      "assigneeRequired": false,
      "appliesTo": ["Feature", "User Story"],
      "metadata": {
        "category": "release",
        "tags": ["qa", "validation", "staging"],
        "priority": 3,
        "configurable": true
      }
    },
    {
      "id": "release.security-review",
      "title": "Security Review",
