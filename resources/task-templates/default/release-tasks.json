      "appliesTo": ["Feature", "User Story"],
      "metadata": {
        "category": "release",
        "tags": ["security", "review", "compliance"],
        "priority": 4,
        "configurable": true
      }
    },
    {
      "id": "release.performance-testing",
      "title": "Performance Testing",
      "description": "Conduct performance testing to ensure the changes meet performance requirements.",
      "remainingWork": 3,
      "activity": "Testing",
      "assigneeRequired": false,
      "appliesTo": ["Feature", "User Story"],
      "metadata": {
        "category": "release",
        "tags": ["performance", "testing", "benchmarks"],
        "priority": 5,
        "configurable": true
      }
    },
    {
      "id": "release.rollback-plan",
      "title": "Create Rollback Plan",
      "description": "Create a detailed rollback plan in case the deployment needs to be reverted.",
      "remainingWork": 1,
      "activity": "Design",
      "assigneeRequired": false,
      "appliesTo": ["Feature", "User Story"],
      "metadata": {
        "category": "release",
        "tags": ["rollback", "contingency", "planning"],
        "priority": 6,
        "configurable": true
