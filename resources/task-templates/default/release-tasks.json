    {
      "id": "release.deploy-to-production",
      "title": "Deploy to Production",
      "description": "Deploy the validated build to the production environment.",
      "remainingWork": 3,
      "activity": "Deployment",
      "assigneeRequired": false,
      "appliesTo": ["Feature", "User Story"],
      "metadata": {
        "category": "release",
        "tags": ["deployment", "production", "go-live"],
        "priority": 7,
        "configurable": true
      }
    },
    {
