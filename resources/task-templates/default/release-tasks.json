      "activity": "Documentation",
      "assigneeRequired": false,
      "appliesTo": ["Feature", "User Story"],
      "metadata": {
        "category": "release",
        "tags": ["communication", "users", "announcement"],
        "priority": 10,
        "configurable": true
      }
