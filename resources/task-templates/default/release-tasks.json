      "remainingWork": 4,
      "activity": "Testing",
      "assigneeRequired": false,
      "appliesTo": ["Feature", "User Story"],
      "metadata": {
        "category": "release",
        "tags": ["monitoring", "stability", "production"],
        "priority": 8,
        "configurable": true
      }
    },
    {
      "id": "release.update-documentation",
      "title": "Update Release Documentation",
      "description": "Update documentation to reflect the changes included in this release.",
